<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.osmp.web.user.dao.UserMapper">
	<resultMap type="com.osmp.web.user.entity.User" id="User">
		<id property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="password" column="password"/>
		<result property="realName" column="real_name"/>
		<result property="nickName" column="nick_name"/>
		<result property="status" column="status"/>
		<result property="createTime" column="create_time"/>
		<result property="lastUpdateTime" column="last_update_time"/>
		<result property="lastLoginIp" column="last_login_ip"/>
	</resultMap>
	<resultMap type="java.lang.Integer" id="Integer"></resultMap>
	<resultMap type="java.lang.String" id="String"></resultMap>
	
	
	<select id="getById" parameterType="String" resultMap="User">
		 SELECT * FROM tb_user T where ID=#{id}
	</select>
	<select id="selectUserPrivilege" parameterType="String" resultMap="Integer">
		select trp.privilege_id 
		from tb_role_privilege trp,
			(select T.role_id roleId from tb_user_role T where user_id=#{id}) tmp
		where tmp.roleId = trp.role_id 
			GROUP BY trp.privilege_id
	</select>
	<select id="getUser" parameterType="String" resultMap="User">
		 SELECT tu.*
			from tb_user tu,
			 tb_user_role tur
			where tu.id = tur.user_id
			 and tur.user_id = #{userId}
			 and tur.role_id = #{roleId}
	</select>
	<delete id="deletByUserId" parameterType="String">
		 delete from tb_user_role where user_id=#{userId}
	</delete>
	<delete id="deletByRoleId" parameterType="String">
		 delete from tb_user_role where role_id=#{roleId}
	</delete>
	
	<insert id="addUserRole" parameterType="UserRole" useGeneratedKeys="true" keyProperty="id">
		insert into tb_user_role(id,user_id, role_id) values(#{id}, #{userId}, #{roleId})
	</insert>
	
	<update id="updateLoadIp" parameterType="String"> 
		update tb_user set last_login_ip=#{ip} where id=#{id}
	</update>
	
	<select id="selectUserRole" parameterType="String" resultMap="String">
		SELECT t.role_id
		FROM tb_user_role t
		where t.user_id=#{id}
	</select>
	
</mapper>